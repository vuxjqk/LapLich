
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<section class="py-12 relative bg-gray-50">
    <div class="w-full max-w-6xl px-4 md:px-8 mx-auto">
        <div class="w-full grid lg:grid-cols-2 grid-cols-1 gap-16">
            <!-- Contact Form -->
            <div class="w-full">
                <form class="w-full flex flex-col gap-6 bg-white p-8 shadow-lg rounded-lg" action="/send-message" method="POST">
                    <div class="w-full">
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Họ và Tên</label>
                        <input type="text" id="name" name="name" required class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    </div>
                    <div class="w-full">
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input type="email" id="email" name="email" required class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                    </div>
                    <div class="w-full">
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Tin Nhắn</label>
                        <textarea id="message" name="message" rows="5" required class="block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
                    </div>
                    <button type="submit" class="w-full px-4 py-3 mt-6 bg-indigo-600 hover:bg-indigo-700 transition-colors duration-300 text-white font-semibold text-lg rounded-md shadow-md">
                        Gửi Tin Nhắn
                    </button>
                </form>
            </div>
            <!-- Contact Details -->
            <div class="w-full">
                <div class="flex flex-col gap-6">
                    <h3 class="text-gray-900 text-3xl font-bold mb-6">Thông Tin Liên Hệ</h3>
                    <div class="space-y-4">
                        <div>
                            <h4 class="text-gray-900 font-semibold text-lg">Đơn vị</h4>
                            <p class="text-gray-500 text-base">Khoa Công Nghệ Thông Tin - Trường Đại học Công Thương TP.HCM</p>
                        </div>
                        <div>
                            <h4 class="text-gray-900 font-semibold text-lg">Địa Chỉ</h4>
                            <p class="text-gray-500 text-base">140 Lê Trọng Tấn, Tây Thạnh, Tân Phú, TP.HCM</p>
                        </div>
                        <div>
                            <h4 class="text-gray-900 font-semibold text-lg">Hotline</h4>
                            <p class="text-gray-500 text-base">0283 8163 318</p>
                        </div>
                        <div>
                            <h4 class="text-gray-900 font-semibold text-lg">Email</h4>
                            <p class="text-gray-500 text-base">info@huit.edu.vn</p>
                        </div>
                        <div>
                            <h4 class="text-gray-900 font-semibold text-lg">Giờ Làm Việc</h4>
                            <p class="text-gray-500 text-base">Thứ 2 - Chủ nhật: 7:00 – 12:00 | 13:30 – 17:00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
