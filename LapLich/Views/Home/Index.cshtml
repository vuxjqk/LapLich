
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<style>
    body {
        font-family: 'Inter', sans-serif;
        line-height: 1.6;
        background-color: #f0f4f8;
    }

    .title h1 {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 16px;
        color: #2c7a7b;
    }

    .section {
        padding: 40px 20px;
    }

    .section-light {
        background-color: #f9f9f9;
    }

    .service {
        background-color: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 20px;
        padding: 24px;
        max-width: 350px;
        transition: transform 0.3s ease;
        text-align: center;
    }

    .service:hover {
        transform: translateY(-10px);
    }

    .service img {
        border-radius: 15px;
        width: 100%;
        height: auto;
    }

    .service h1 {
        font-size: 20px;
        margin: 20px 0 10px;
        color: #333;
    }

    .service p {
        font-size: 18px;
        color: #2c7a7b;
        margin-bottom: 20px;
    }

    .service .btn {
        display: flex;
        gap: 10px;
    }

    .btn a {
        padding: 10px 20px;
        border-radius: 30px;
        transition: 0.3s;
    }

    .btn a:hover {
        background-color: #2c7a7b;
        color: white;
    }

    .advisory-form input {
        border-radius: 30px;
        padding: 12px 15px;
        border: 2px solid #ccc;
        font-size: 16px;
    }

    .advisory-form button {
        padding: 12px 30px;
        background-color: #2c7a7b;
        color: white;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .advisory-form button:hover {
        background-color: #1d5b5b;
    }

    .about-us {
        background-color: #ffffff;
        padding: 60px 20px;
        text-align: center;
    }

    .about-us h2 {
        font-size: 36px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #1d3557;
    }

    .about-us p {
        color: #555;
        font-size: 18px;
        margin-bottom: 30px;
    }

    .stats {
        display: flex;
        justify-content: space-around;
    }

    .stats div {
        text-align: center;
    }

    .stats h3 {
        font-size: 40px;
        color: #2c7a7b;
        margin-bottom: 8px;
    }

    .stats h6 {
        font-size: 18px;
        color: #555;
    }

    /* Giới thiệu nhóm */
    .group-info {
        background-color: #f3f4f6;
        padding: 50px 20px;
        text-align: center;
        margin-top: 40px;
        border-radius: 10px;
    }

    .group-info h2 {
        font-size: 28px;
        font-weight: bold;
        color: #1d3557;
        margin-bottom: 20px;
    }

    .group-info p {
        font-size: 18px;
        color: #555;
        margin-bottom: 10px;
    }

    .group-info span {
        font-weight: 700;
        color: #2c7a7b;
    }

    .marquee {
        overflow: hidden;
        white-space: nowrap;
        box-sizing: border-box;
        background-color: #f39c12;
        color: #fff;
        padding: 7px 0;
        text-align: center;
    }

    .marquee p {
        display: inline-block;
        padding-left: 100%;
        animation: marquee 20s linear infinite;
    }

    @@keyframes marquee {
        0% {
            transform: translate(0);
        }
        100% {
            transform: translate(-100%);
        }
    }
</style>

